{% extends 'base.html.twig' %}
{% form_theme client_form 'form/fields.html.twig' %}

{% block title %}Hello World!{% endblock %}

{% block body %}
<style>
    .wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .my-form-class { font: 16px/1.5 sans-serif; }
</style>

{% for message in app.flashes('clientPost') %}
    <div class="flash-notice">
        {{ message }}
    </div>
{% endfor %}

<div class="wrapper">
    {{ form_start(client_form, {attr: {class: 'my-form-class'} }) }}
      {{ form_widget(client_form) }}
    {{ form_end(client_form) }}
    <div class="logout">
        <a href="{{ path('logout') }}">Quitter</a>
    </div>
</div>

{% endblock %}
